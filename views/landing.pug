extends layout.pug

block layout-content
	#Index
		div.container-box
			p.title Welcome to wwWallet issuer
			p.description Explore any of the above credential types
			div.flex-box
				each cred in supportedCredentials
					.box
						h2 #{cred.display[0].name}
						p #{cred.display[0].description}

						// Button for redirection
						button.Btn.Large.Landing(id="mainBtn" onclick=`window.location.href = "/offer/${cred.scope}"`) Explore

		.container
			h1 #{locale.index.heading}
			p #{locale.index.paragraph}
			p #{locale.index.paragraph2}
			.demo-text #{locale.index.demo_text}

	block footer
		include footer.pug

	link(rel="stylesheet" href="/styles/landing.css")
	link(rel="stylesheet" href="/styles/index.css")

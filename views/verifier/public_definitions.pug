extends ../layout.pug

block layout-content
	.container2.container-positions
		h1 Present your Verifiable Credentials
		.card-container
			for definition in presentationDefinitions
				.card
					.card-title #{definition.title}
					p.card-text #{definition.description}
					.card-buttons
						if definition._selectable === true
							button.btn.btn-primary(onclick=`window.location.href = "/verifier/public/definitions/configurable-presentation-request/${definition.id}"`) Present
						else
							button.btn.btn-primary(onclick=`window.location.href = "/verifier/public/definitions/presentation-request/${definition.id}"`) Present
			.card
				.card-title Custom Presentation Definition
				p.card-text Import the presentation definition of your choice.
				.card-buttons
					button.btn.btn-primary(onclick=`window.location.href = "/verifier/public/definitions/edit-presentation-definition"`) Import
	block footer
		include ../footer.pug

	link(rel="stylesheet" href="/styles/index.css")
	script(src="/js/index.js")
